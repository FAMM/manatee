=form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f|
  =devise_error_messages!
  %fieldset
    %legend= t("devise.passwords.forgot_title")

    .control-group
      =f.label :email, :class => "control-label"
      .controls
        =f.email_field :email, :autofocus => true

    .form-actions
      %p
        = f.submit t("devise.passwords.forgot_button"), :class => "btn btn-primary"
      = render "devise/shared/links"
