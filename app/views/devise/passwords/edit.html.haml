=form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f|
  =devise_error_messages!
  %fieldset
    %legend= t("devise.passwords.change_title")

    .control-group
      =f.label :password, :class => "control-label"
      .controls
        =f.password_field :password, :autofocus => true

    .control-group
      =f.label :password_confirmation, :class => "control-label"
      .controls
        =f.password_field :password_confirmation

    .form-actions
      %p
        = f.submit t("devise.passwords.change_button"), :class => "btn btn-primary"
      = render "devise/shared/links"
