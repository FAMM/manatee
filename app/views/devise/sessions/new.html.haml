=form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f|
  =devise_error_messages!
  %fieldset
    %legend= t("devise.sessions.sign_in_title")

    .control-group
      =f.label :login, t("devise.sessions.label_login"), :class => "control-label"
      .controls
        =f.text_field :login, :autofocus => true

    .control-group
      =f.label :password, :class => "control-label"
      .controls
        =f.password_field :password

    -if devise_mapping.rememberable?
      .control-group
        =f.label :remember_me, :class => "control-label"
        .controls
          =f.check_box :remember_me

    .form-actions
      %p
        = f.submit t("devise.sessions.sign_in_button"), :class => "btn btn-primary"
      = render "devise/shared/links"
