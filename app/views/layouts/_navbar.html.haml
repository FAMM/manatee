.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container

      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => root_url}
        Manatee
      .container.nav-collapse


        %ul.nav
          %li{:class => (controller.controller_name=="welcome") ? "active":nil}
            %a{:style => "font-weight:normal", :href => root_path}
              %i.icon-home.icon-white
          %li{:class => (controller.controller_name=="summary") ? "active":nil}
            %a{:style => "font-weight:normal", :href => summary_index_path}
              %i.icon-retweet.icon-white

        -if current_user
          %ul.nav.pull-right
            %li.dropdown
              =link_to "#", :class => "dropdown-toggle", "data-toggle"=>"dropdown" do
                =current_user.name
                %b.caret
              %ul.dropdown-menu
                %li
                  =link_to "Account", edit_user_registration_path
                %li
                  =link_to "Logout", destroy_user_session_path, :method => :delete
          %ul.nav.pull-right
            %li
              = t('common.saldo')
              = number_to_currency current_user.saldo
            //spacer
            %li &nbsp;
        -else
          %ul.nav.pull-right
            %li
              =link_to "Login", new_user_session_path
