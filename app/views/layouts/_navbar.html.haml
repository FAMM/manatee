.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %button{:type=>"button", :class=>"btn btn-navbar", "data-toggle"=>"collapse", "data-target"=>".nav-collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      %a.brand{:href=>root_url}
        =image_tag "manatee.png", :style => "width:20px"
        Manatee
      .nav-collapse.collapse.text-center
        %ul.nav
          %li{:class => (controller.controller_name=="welcome") ? "active":nil}
            %a{:style => "font-weight:normal", :href => root_path}
              %i.icon-home.icon-white
          %li{:class => (controller.controller_name=="summaries") ? "active":nil}
            %a{:style => "font-weight:normal", :href => summaries_path}
              %i.icon-list.icon-white

        %ul.nav.pull-right
          %li.navbar-text
            = t('common.saldo')
            = number_to_currency current_user.saldo
          %li.divider-vertical
          %li.dropdown
            %a.dropdown-toggle{:href=>"#", "data-toggle"=>"dropdown"}
              =current_user.name
              %b.caret
            %ul.dropdown-menu
              %li
                =link_to "Account", edit_user_registration_path
              %li
                =link_to "Logout", destroy_user_session_path, :method => :delete
