!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content=> "width=device-width, initial-scale=1.0"}

    = stylesheet_link_tag "application"
    = csrf_meta_tags
    = javascript_include_tag "application"


  %body
    #wrap
      %div= render :partial => "layouts/navbar"

      .container.main-container
        .main-content
          .row
            .span12#flash-container
              .alert#flash-prototype{ style: "display: none;" }
                %button{:type=>"button",:class=>"close","data-dismiss"=>"alert"}
                  &times;
              -if flash[:notice]
                .alert.alert-success
                  %button{:type=>"button",:class=>"close","data-dismiss"=>"alert"}
                    &times;
                  =flash[:notice]

              -if flash[:error]
                .alert.alert-error
                  %button{:type=>"button",:class=>"close","data-dismiss"=>"alert"}
                    &times;
                  =flash[:error]

              - if flash[:alert]
                .alert.alert-notice
                  %button{:type=>"button",:class=>"close","data-dismiss"=>"alert"}
                    &times;
                  =flash[:alert]
          .row
            .span12
              = yield


        #push
    %footer
      .container
        =render :partial => "layouts/footer"


