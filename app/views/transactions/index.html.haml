%h1.page-header
  = t("transactions.heading", :budget_name => @budget.name)
  %small= criteria_to_text @filter_critera

.row
  .col-md-9
    %table.table.table-striped
      %thead
        %tr
          %th
            = t("activerecord.attributes.transaction.comment")
          %th
            = t("activerecord.models.category")
          %th
            = t("activerecord.attributes.transaction.amount")
          %th
            = t("activerecord.attributes.common.created_at")
          - if @budget.users.count > 1
            %th
              = t(".created_by")

      %tbody
        -@transactions.each do |transaction|
          %tr
            %td
              =transaction.comment
            %td
              =transaction.category.name
            %td
              =transaction.amount
            %td
              =transaction.created_at
          - if @budget.users.count > 1
            %th
              =transaction.user.name

    %p
      =link_to t("entities.new", :entity => t("activerecord.models.transaction")  ), new_budget_transaction_path(@budget)

  .col-md-3
    = render :partial => 'partials/budget_sidebar'
