=render :partial => "partials/budget_header"

.row
  .col-md-9
    .text-right
      %strong= formated_currency(@budget.used_this_month)
    =render :partial => "transactions/list", :locals => {:transactions => @transactions}



  .col-md-3
    %h4= t("sidebar.categories")
    =render :partial => "categories/legend", :locals => {:categories => @budget.categories}

    %h4= t("sidebar.sort_options")
    .list-group
      =action_bar_link_to t('transactions.index.transactions_by_sort', :sort => 'Category'), budget_transactions_path(@budget,{:sort => 'category'})
      =action_bar_link_to t('transactions.index.transactions_by_sort', :sort => 'Date'), budget_transactions_path(@budget,{:sort => 'date'})
      =action_bar_link_to t('transactions.index.transactions_by_sort', :sort => 'User'), budget_transactions_path(@budget,{:sort => 'user'}) unless @budget.single_user?
